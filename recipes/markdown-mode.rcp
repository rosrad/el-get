(:name markdown-mode
       :description "Major mode to edit Markdown files in Emacs"
       :website "https://github.com/defunkt/markdown-mode"
       :type github
       :pkgname "defunkt/markdown-mode"
       :prepare (add-to-list 'auto-mode-alist
                             '("\\.\\(md\\|mdown\\|markdown\\)\\'" . markdown-mode)))
